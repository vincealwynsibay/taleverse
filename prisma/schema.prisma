generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  clerkId  String   @unique
  email    String   @unique
  username String
  image    String?  @default("")
  // user by default
  role     UserRole @default(USER)
}

enum UserRole {
  ADMIN
  USER
}
